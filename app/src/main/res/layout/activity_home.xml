<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- App bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/bg"
            android:title="ZenMind"
            android:titleTextColor="@color/textPrimary"
            app:titleCentered="true"/>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- SCROLLABLE CONTENT -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:paddingBottom="72dp">

        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Slogan (tap to cycle) -->
            <TextView
                android:id="@+id/tvSlogan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Breathe. Reflect. Rebalance."
                android:textColor="@color/textPrimary"
                android:textSize="22sp"
                android:textStyle="bold"
                android:paddingBottom="10dp"/>

            <!-- Streak chip -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/primaryContainer"
                android:layout_marginBottom="16dp">
                <TextView
                    android:id="@+id/tvStreak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”¥ 3-day streak"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Daily Quote -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/primaryContainer"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="@string/daily_quote_label"
                        android:textStyle="bold"
                        android:textColor="@color/textPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvQuote"
                        android:text="â€œCalm is a superpower.â€"
                        android:textSize="16sp"
                        android:paddingTop="6dp"
                        android:textColor="@color/textPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Start Meditation -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartMeditation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/start_meditation"
                android:layout_marginBottom="16dp"/>

            <!-- Quick Actions: 1m / 3m / 5m -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnQuick1"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1-min breath"
                    android:layout_marginEnd="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnQuick3"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3-min reset"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnQuick5"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="5-min calm"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Mood quick icons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">
                <TextView
                    android:id="@+id/emojiHappy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="ðŸ˜Š"
                    android:textSize="30sp"/>
                <TextView
                    android:id="@+id/emojiNeutral"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="ðŸ˜"
                    android:textSize="30sp"/>
                <TextView
                    android:id="@+id/emojiSad"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="ðŸ˜”"
                    android:textSize="30sp"/>
            </LinearLayout>

            <!-- Featured Session -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Featured: Focus Reset"
                        android:textStyle="bold"
                        android:textColor="@color/textPrimary"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="5 min Â· Quick Â· Great before exams or meetings"
                        android:alpha="0.75"
                        android:textColor="@color/textPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFeaturedStart"
                        android:text="Start"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Today's Goal (UI-only progress) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="1dp"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Todayâ€™s Goal"
                        android:textStyle="bold"
                        android:textColor="@color/textPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="10 min mindful time"
                        android:textColor="@color/textPrimary"
                        android:alpha="0.75"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="10dp"
                        android:max="100"
                        android:progress="45"
                        android:progressTint="@color/primary"
                        android:backgroundTint="@color/muted"/>
                    <TextView
                        android:text="4m completed"
                        android:textColor="@color/textPrimary"
                        android:alpha="0.75"
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Recommended Styles (horizontal chips, UI-only) -->
            <TextView
                android:text="Recommended styles"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.google.android.material.button.MaterialButton
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Breathwork"
                        android:layout_marginEnd="8dp"/>
                    <com.google.android.material.button.MaterialButton
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Body Scan"
                        android:layout_marginEnd="8dp"/>
                    <com.google.android.material.button.MaterialButton
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Focus"
                        android:layout_marginEnd="8dp"/>
                    <com.google.android.material.button.MaterialButton
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sleep"/>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Quick Journal -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardQuickJournal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">
                <LinearLayout
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/quick_journal"
                        android:textColor="@color/textPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœï¸"
                        android:textSize="20sp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tips for today -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="1dp">
                <LinearLayout
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Tips for today"
                        android:textStyle="bold"
                        android:textColor="@color/textPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="â€¢ Try 1-min breath between tasks"
                        android:textColor="@color/textPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="â€¢ Journal one gratitude line tonight"
                        android:textColor="@color/textPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="â€¢ Avoid screens 15 minutes before bed"
                        android:textColor="@color/textPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Recent Journals (horizontal, UI only) -->
            <TextView
                android:text="Recent Journals"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="1dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="14dp"
                            android:orientation="vertical">
                            <TextView
                                android:text="Morning gratitude"
                                android:textStyle="bold"
                                android:textColor="@color/textPrimary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="#gratitude Â· Today"
                                android:alpha="0.75"
                                android:textColor="@color/textPrimary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="1dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="14dp"
                            android:orientation="vertical">
                            <TextView
                                android:text="Breathing felt easier"
                                android:textStyle="bold"
                                android:textColor="@color/textPrimary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="#calm Â· Yesterday"
                                android:alpha="0.75"
                                android:textColor="@color/textPrimary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- (room to add even more items in future) -->

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Nav (visible labels) -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/surface"
        app:menu="@menu/bottom_nav_menu"
        app:itemTextColor="@color/textPrimary"
        app:itemIconTint="@color/textPrimary"
        app:labelVisibilityMode="labeled"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
